<%= form_with(model: post) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control post-field' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class:'form-control post-field' %>
  </div>
  <%= f.submit "Enviar", class:'btn btn-primary' %>
<% end %>