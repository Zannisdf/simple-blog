<div id="<%= post.id %>" class="post card mt-3">
  <div class="card-body">
    <h3 class="post-title card-title"><%= post.title %></h3>
    <div class="d-flex justify-content-between">
      <%= link_to 'Leer más...', post_path(post), data: {remote: true} %>
      <% if post.user == current_user %>
        <div>
          <%= link_to edit_post_path(post), class: 'btn btn-info btn-sm', data: { remote: true } do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to post_path(post), class: 'btn btn-danger btn-sm', data: { remote:true, method: :delete, confirm: '¿Seguro que desea eliminar este post y todo su contenido?' } do %>
            <i class="fas fa-times-circle"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>